@page
@model CNMaisons.Pages.ViewPropertyModel
@{
    Layout = "_Header";
    ViewData["Title"] = "View Property";
}
<div>
    <video autoplay muted loop id="video-background">
        <source src="~/img/loopvideo.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <form name="ViewProperty" method="post" class="view_form">
        <fieldset>
            <legend>Book Property Visit</legend>
            <div>
                <label for="PropertyID">Property ID</label>
                <br />
                <input type="number" name="PropertyID" />
                <br />
                <label for="FirstName">First Name</label>
                <br />
                <input type="text" name="FirstName" />
                <br />

                <label for="LasName">Last Name</label>
                <br />
                <input type="text" name="LastName" />
                <br />

                <label for="TelephoneNumber">Tel Number</label>
                <br />
                <input type="tel" name="TelephoneNumber" />
                <br />

                <label for="Email">Email</label>
                <br />
                <input type="email" name="Email" />
                <br />

                <label for="DateOfVisit">Date Of Visit</label>
                <br />
                <input type="date" name="DateOfVisit" />
                <br />
                <input type="submit" name="Submit" value="Apply" />
            </div>
        </fieldset>
    </form>
</div>
